
set history=700
set undolevels=700
set laststatus=2

" Use four spaces for indentation in general
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set expandtab

" Use two spaces for indentation in ada
autocmd FileType ada setlocal shiftwidth=2 tabstop=2

" Searching
set hlsearch
set incsearch
set ignorecase
set smartcase

" Disable backup and swap files
set nobackup
set nowritebackup
set noswapfile

" Clipboard
set pastetoggle=<F2>
set clipboard=unnamed

set mouse=a
set bs=2
let mapleader = ","

" Force .md files to be read as markdown
autocmd BufNewFile,BufReadPost *.md set filetype=markdown

" Clear search highlight
noremap <C-n> :nohl<CR>
vnoremap <C-n> :nohl<CR>
inoremap <C-n> :nohl<CR>

" Quicksave
noremap <C-Z> :update<CR>
vnoremap <C-Z> <C-C>:update<CR>
inoremap <C-Z> <C-O>:update<CR>

" Quick quit
noremap <Leader>e :quit<CR>  " Quit current window
noremap <Leader>E :qa!<CR>   " Quit all windows

" Select all
map <Leader>a ggVG

" Easier moving between tabs
map <Leader>n <esc>:tabprevious<CR>
map <Leader>m <esc>:tabnext<CR>

" Sorting (very useful for alphabetizing python imports)
vnoremap <Leader>s :sort<CR>

" Disable arrow keys for navigation
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>

" Move the cursor in insert mode with CTRL
imap <C-h> <C-o>h
imap <C-j> <C-o>j
imap <C-k> <C-o>k
imap <C-l> <C-o>l

" Indent and dedent more easily.
vnoremap < <gv
vnoremap > >gv
nnoremap <Tab> >>_
nnoremap <S-Tab> <<_
inoremap <S-Tab> <C-D>
vnoremap <Tab> >gv
vnoremap <S-Tab> <gv

" Invoke pathogen to automagically load plugins, colors, etc.
call pathogen#infect()

" Theme / Appearance "

set t_Co=256
color wombat

" Show whitespace
autocmd ColorScheme * highlight ExtraWhitespace ctermbg=red guibg=red

" Enable syntax highlighting
filetype plugin indent on
syntax on

" Line numbers, document width, and wrapping
set number  " show line numbers
set tw=79   " width of document (used by gd)
set nowrap  " don't automatically wrap on load
set fo-=t   " don't automatically wrap text when typing


" Plugin Settings "

" Smarty syntax highlighting
au BufRead,BufNewFile *.tpl set filetype=smarty

" ctrlp
let g:ctrlp_max_height = 30
set wildignore+=*.pyc
set wildignore+=*_build/*
set wildignore+=*/coverage/*
set wildignore+=.tox*

" Better navigating through omnicomplete option list
set completeopt=longest,menuone
function! OmniPopup(action)
    if pumvisible()
        if a:action == 'j'
            return "\<C-N>"
        elseif a:action == 'k'
            return "\<C-P>"
        endif
    endif
    return a:action
endfunction

" NerdTree 
nmap <silent> <C-D> :NERDTreeToggle<CR>
let NERDTreeIgnore = ['\.py[co]$', '__pycache__$']

" Syntastic
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

