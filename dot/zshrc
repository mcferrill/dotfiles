
DOTFILES=$HOME/.files
export PATH=$DOTFILES/bin:$PATH

# Virtualenvwrapper
WORKON_HOME=$HOME/.envs
if [ "$VIRTUAL_ENV" ]; then 
    source $VIRTUAL_ENV/bin/activate; 
fi 

# Pip 
PIP_VIRTUALENV_BASE=$WORKON_HOME
PIP_RESPECT_VIRTUALENV=true

# System specific settings
if [ -f $DOTFILES/sys.sh ]; then
    source $DOTFILES/sys.sh
fi

# oh-my-zsh
export ZSH="$HOME/.files/oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(
    gitfast
    docker
    iterm2
    python
    tmux
    virtualenvwrapper
    kubectl
)
source $ZSH/oh-my-zsh.sh

source $DOTFILES/aliases.sh

function light {
    iterm2_profile Light
    export USER_THEME="light"
}

function dark {
    iterm2_profile Default
    export USER_THEME="dark"
}
